<Window x:Class="WFP_Project.Pages.GuiArchive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFP_Project.Pages"
        mc:Ignorable="d"
        Title="Gui - Archive" Height="90" Width="300" MaxHeight="90" MaxWidth="300" MinHeight="90" MinWidth="300"
        Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>
    <Grid>
        <TextBox 
            x:Name="archiveTableNameTextBox"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Width="120" Height="21" Margin="10,10,10,10"
            BorderThickness="2" 
            BorderBrush="#FF1D716B"
            MaxLength="15"/>
        <Button
            Content="Archivate"
            Click="ArchiveButton_Click" 
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Width="120" Height="25" Margin="10, 10, 10, 10"/>
    </Grid>
</Window>
