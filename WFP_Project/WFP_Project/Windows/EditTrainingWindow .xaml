<Window x:Class="WFP_Project.Windows.EditTrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFP_Project.Windows"
        mc:Ignorable="d"
        Title="Edit Training" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="TrainingNameTextBox" Width="400" Margin="0,0,0,10" />
            <TextBox x:Name="AthleteNameTextBox" Width="400" Margin="0,0,0,10" />
            <TextBox x:Name="CoachNameTextBox" Width="400" Margin="0,0,0,20" />
            <TextBlock Text="Exercises" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListView x:Name="ExercisesListView" Margin="0,0,0,20">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Exercise" DisplayMemberBinding="{Binding ExerciseName}" Width="200"/>
                        <GridViewColumn Header="Reps" DisplayMemberBinding="{Binding Reps}" Width="100"/>
                        <GridViewColumn Header="Sets" DisplayMemberBinding="{Binding Sets}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBox x:Name="ExerciseNameTextBox" Width="200" Margin="0,0,0,5" />
            <TextBox x:Name="RepsTextBox" Width="100" Margin="0,0,5,5" />
            <TextBox x:Name="SetsTextBox" Width="100" Margin="0,0,0,20" />
            <Button Content="Add Exercise" Click="AddExerciseButton_Click" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="SaveButton_Click" Margin="0,0,5,0"/>
                <Button Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
