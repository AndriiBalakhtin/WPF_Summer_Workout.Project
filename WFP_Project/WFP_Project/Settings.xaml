<Window x:Class="WFP_Project.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="Theme:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox Name="ThemeModeComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,10,0,0"
                  Width="120" SelectionChanged="ThemeModeComboBox_SelectionChanged">
            <ComboBoxItem Content="White"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>
    </Grid>
</Window>
