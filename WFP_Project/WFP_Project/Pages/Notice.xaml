<Window x:Class="WFP_Project.Pages.Notice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Title="Notice"
        Height="450" Width="800"
        Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="NoticeTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="10" FontSize="16" FontWeight="Bold"/>

        <DataGrid x:Name="DataGridConfirmations" AutoGenerateColumns="True" Grid.Row="1" Margin="10" SelectionChanged="DataGridConfirmations_SelectionChanged"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="10">
            <Button Content="Approve" Click="ButtonApprove_Click" Margin="5"/>
            <Button Content="Deny" Click="ButtonDeny_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
