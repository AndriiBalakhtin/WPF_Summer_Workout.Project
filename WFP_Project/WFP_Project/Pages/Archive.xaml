<Window x:Class="WFP_Project.Pages.ArchiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Archive Window" Height="600" Width="800"
        Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="archiveTableNameTextBox" Width="200" Height="25" Margin="10"/>
            <Button Content="Archive" Click="ArchiveButton_Click" Width="100" Height="30" Margin="10"/>
            <ComboBox x:Name="archivedTablesComboBox" Width="200" Height="25" Margin="10"/>
            <Button Content="Load Table" Click="LoadTableButton_Click" Width="100" Height="30" Margin="10"/>
            <DataGrid x:Name="archivedDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" AutoGenerateColumns="True"/>
        </StackPanel>
    </Grid>
</Window>
