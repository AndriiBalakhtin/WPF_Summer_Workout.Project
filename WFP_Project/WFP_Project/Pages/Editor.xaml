<Window x:Class="WFP_Project.Pages.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFP_Project.Pages"
        mc:Ignorable="d"
        Title="Editor" Height="400" Width="260" MaxHeight="400" MaxWidth="260" MinHeight="400" MinWidth="260">
    <Grid>
        <StackPanel Margin="20">
            <Label
                Content="Force:"/>
            <TextBox
                Name="forceTextBox"
                Width="200"
                Margin="0,0,0,10"/>
            <Label
                Content="Repeat 1st:"/>
            <TextBox
                Name="repeate_1stTextBox"
                Width="200"
                Margin="0,0,0,10"/>
            <Label
                Content="Weight:"/>
            <TextBox
                Name="weightTextBox" 
                Width="200"
                Margin="0,0,0,10"/>
            <Label 
                Content="Repeat 2nd:"/>
            <TextBox
                Name="repeate_2ndTextBox"
                Width="200"
                Margin="0,0,0,10"/>
            <Label 
                Content="Goal:"/>
            <TextBox
                Name="goalTextBox" 
                Width="200"
                Margin="0,0,0,10"/>
            <Label
                Content="Repeat 3rd:"/>
            <TextBox
                Name="repeate_3rdTextBox" 
                Width="200" 
                Margin="0,0,0,10"/>
            <Button 
                Content="Update"
                Width="100" 
                Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
