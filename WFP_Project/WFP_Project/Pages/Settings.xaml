<Window x:Class="WFP_Project.Pages.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="800"
        Loaded="Window_Loaded" Icon="C:\Reposotory\WFP\WFP_Summer.Project\WFP_Project\WFP_Project\Pages\Settings.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="773*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Theme:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Grid.ColumnSpan="2"/>

        <ComboBox 
            Name="ThemeModeComboBox"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="43,10,0,0"
            Width="120"
            SelectionChanged="ThemeModeComboBox_SelectionChanged"
            Grid.Column="1"
            BorderBrush="Black"
            Background="White"
            Foreground="Black">
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>
    </Grid>
</Window>
