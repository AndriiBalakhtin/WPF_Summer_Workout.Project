<Window x:Class="WFP_Project.Pages.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Control Panel" Height="600" Width="1140" MinHeight="600" MinWidth="1140"
        Loaded="Window_Loaded">
    <Grid>
        <Label 
            Content="Force"
            Margin="150, 0, 0, 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="40" Height="27"/>
        <Label
            Content="Repeat 1st"
            Margin="268, 0, 0, 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="65" Height="27"/>
        <Label
            Content="Weight"
            Margin="406, 0, 0, 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="48" Height="27"/>
        <Label 
            Content="Repeat 2nd"
            Margin="526, 0, 0, 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="70" Height="27"/>
        <Label 
            Content="Goal"
            Margin="672, 0, 0, 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="34" Height="27"/>
        <Label
            Content="Repeat 3rd"
            Margin="786, 0, 0, 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="68" Height="27"/>
        <Button
            Name="insertButton"
            Content="Insert"
            Margin="10,26,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="85" Height="20"
            Click="InsertButton_Click"
            RenderTransformOrigin="0.512,0.502"/>
        <TextBox
            Name="forceTextBox"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="110,27,0,0"
            Width="120"
            BorderThickness="2,2,2,2"
            RenderTransformOrigin="0,0"
            BorderBrush="#FF1D716B"
            SelectionBrush="#FF0B83E2"
            Text=""
            UndoLimit="4" MaxLength="25"/>
        <TextBox
            Name="repeate_1stTextBox" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="240,27,0,0" Width="120"
            PreviewKeyDown="NumbersOnlyTextboxes"
            BorderThickness="2,2,2,2" 
            RenderTransformOrigin="0,0"
            BorderBrush="#FF1D716B" 
            SelectionBrush="#FF0B83E2"/>
        <TextBox 
            Name="weightTextBox"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="370,27,0,0"
            Width="120"
            BorderThickness="2,2,2,2"
            RenderTransformOrigin="0,0"
            BorderBrush="#FF1D716B"
            SelectionBrush="#FF0B83E2"
            MaxLength="50"/>
        <TextBox 
            Name="repeate_2ndTextBox"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="500,27,0,0"
            Width="120" 
            PreviewKeyDown="NumbersOnlyTextboxes"
            BorderThickness="2,2,2,2"
            RenderTransformOrigin="0,0" 
            BorderBrush="#FF1D716B" 
            SelectionBrush="#FF0B83E2"/>
        <TextBox
            Name="goalTextBox"   
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Margin="630,27,0,0" Width="120"
            BorderThickness="2,2,2,2" 
            RenderTransformOrigin="0,0" 
            BorderBrush="#FF1D716B" 
            SelectionBrush="#FF0B83E2" MaxLength="75"/>
        <TextBox
            Name="repeate_3rdTextBox"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="760,27,0,0"
            Width="120"
            PreviewKeyDown="NumbersOnlyTextboxes"
            BorderThickness="2,2,2,2"
            RenderTransformOrigin="0,0" 
            BorderBrush="#FF1D716B" 
            SelectionBrush="#FF0B83E2"/>
        <DataGrid 
            Name="databaseDataGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Margin="10, 50, 10, 10" BeginningEdit="databaseDataGrid_BeginningEdit" SelectionMode="Single"/>
    </Grid>
</Window>
